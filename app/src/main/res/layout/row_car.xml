<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cons_row_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_40dp"
    android:paddingStart="@dimen/dim_20dp"
    android:paddingEnd="@dimen/dim_20dp"
    android:layout_margin="@dimen/dim_10dp">

    <TextView
        android:layout_marginEnd="@dimen/dim_20dp"
        android:layout_marginStart="@dimen/dim_20dp"
        android:id="@+id/tag_brand_model"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="brand"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tag_year"
        app:layout_constraintStart_toEndOf="@+id/tag_color"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tag_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="red"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginEnd="@dimen/dim_20dp"
        android:id="@+id/tag_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1989"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tag_action"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:visibility="gone"
        android:gravity="center"
        android:paddingStart="@dimen/dim_20dp"
        android:id="@+id/tag_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tag_sync"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintBottom_toBottomOf="@+id/tag_brand_model"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tag_brand_model" />


</androidx.constraintlayout.widget.ConstraintLayout>