<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/lnr_row_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_60dp"
    android:paddingStart="@dimen/dim_10dp"
    android:paddingEnd="@dimen/dim_10dp"
    android:layout_margin="@dimen/dim_10dp">

    <TextView
        android:ellipsize="end"
        android:width="@dimen/dim_80dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/tag_brand_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="brand" />


    <TextView
        android:maxLines="1"
        android:paddingStart="@dimen/dim_20dp"
        android:ellipsize="end"
        android:width="@dimen/dim_150dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:id="@+id/tag_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="regist" />

    <FrameLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/frm_color"
        android:layout_width="@dimen/dim_60dp"
        android:layout_height="match_parent"
        android:gravity="center" />


    <TextView
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:id="@+id/tag_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="@dimen/dim_20dp"
        android:text="@string/tag_sync"
        android:textColor="@android:color/holo_red_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tag_registration"
        app:layout_constraintTop_toTopOf="parent" />


</LinearLayout>