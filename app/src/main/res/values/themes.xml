<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MVVM_DAGGER_ITEO" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/teal_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/francoisoneregular</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="tab_layout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabBackground">@drawable/tab_selector</item>
        <item name="tabTextAppearance">@style/tab_text_appearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="android:layout_height">@dimen/dim_40dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="tab_text_appearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="form_label">
        <item name="android:layout_marginTop">@dimen/dim_20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dim_24dp</item>
    </style>

    <style name="form_edit">
        <item name="android:backgroundTint">@color/teal_main</item>
        <item name="android:layout_height">@dimen/dim_50dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:maxWidth">@dimen/dim_300dp</item>
        <item name="android:layout_marginStart">@dimen/dim_20dp</item>
    </style>

</resources>